        <StatusEffect type="Always" target="This">
          <Remove />
        </StatusEffect>
      </MeleeWeapon>
    </Herb>
    <Item hideinmenus="true" name="Waste Blood" identifier="wasteblood" category="Material" Tags="smallitem" canbepicked="true" description="A nasty green poison that can cause acid burns from the inside. Still haven't been classified throughly." useinhealthinterface="true" cargocontaineridentifier="chemicalcrate" scale="0.28" RequireAimToUse="True" impactsoundtag="impact_metal_light">
      <Sprite texture="%ModDir%/Items/DE-ItemsAtlas.png" sourcerect="0,0,1,1" depth="0.6" origin="0.5,0.5" />
      <Body width="50" height="100" density="11" />
      <MeleeWeapon canBeCombined="true" removeOnCombined="true" slots="Any,RightHand,LeftHand" aimpos="40,5" handle1="0,0" holdangle="220" reload="1.0" msg="ItemMsgPickUpSelect" HitOnlyCharacters="true">
        <StatusEffect type="Always" target="This">
          <Remove />
        </StatusEffect>
      </MeleeWeapon>
