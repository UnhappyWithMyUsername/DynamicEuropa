    <Description
      textidentifier="afflictiondescription.mysteriousdiseaseplayer.self"
      target="Self"
      minstrength="0"
      maxstrength="100"/>
    <Description
      textidentifier="afflictiondescription.mysteriousdiseaseplayer.others"
      target="OtherCharacter"
